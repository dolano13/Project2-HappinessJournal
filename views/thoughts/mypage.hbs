<h1> {{currentUser.username}}</h1>
<style>
   #dashboard-landing{
      margin-top:81px;
      position:relative;
      max-width:100%;
      width:auto;
   }
   img{
      width:100%;
      max-width:100%;
      height:auto;
   }
   .dashpanel{
      position:absolute;
      background:papayawhip;
      box-shadow:0px 1px 2px;
      padding:10px;
   }
     .dashpanel:hover{
        box-shadow:1px 1px 10px;
        margin-top: -5px;
        transtion: all 0.3s ease-in-out forwards;
      }
      a{
         font-weight:700;
      }
      button{
         background:none;
         border:none;
      }
</style>
<div class="faves">
   <section id="dashboard-landing">
      <article class="dashpanel">
         <h5>Last journal entry:</h5>
      {{#if theDate}}
         <a href="/allPosts">{{theDate}}</a>
      {{/if}}
      </article>
{{#each userFaves}}
      <article class="dashpanel">
         <img src="{{this.pic}}" alt="">
         <form action="/dashboard/delete/{{this._id}}" id="delete" method="post"> </form>
         <button form="delete" type="submit">delete</button>
      </article>
{{/each}}
   </section>
</div>




