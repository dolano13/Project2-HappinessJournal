<h1 id="big">Sign Up</h1>

<div class='register'>
  <section class='account'>
    <form class='registerpanel' action="/signup" method="POST" id="form-container">
    <img class='userlogo' src="images/output-onlinepngtools (2).png">
      <label class='userlabel' for="username">Username</label>
      <input id="username" type="text" name="username" placeholder="DwightSchrute">
      <label class='userlabel' for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Your password">

      {{#if message}}
        <div class="error-message">{{ message }}</div>
      {{/if}}
      <br>
      <button class='userbtn' >Create account</button>
      <br>
      <p class="account-message">
        Do you already have an account?
        <a class='user-a' href="/login">Login</a>
      </p>
    </form> 
  </section>
</div>